{
  "name": "@azury/widget",
  "version": "1.2.0",
  "description": "Azury's Minimalistic Widget",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "types": "tsc",
    "build": "build --css --esm -i src/index.ts -o dist/index.js",
    "watch": "build --css --esm --w -i src/index.ts -o dist/index.js",
    "publish:patch": "npm run build && npm version patch && npm publish",
    "publish:minor": "npm run build && npm version minor && npm publish",
    "publish:major": "npm run build && npm version major && npm publish"
  },
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/azury"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurystudios/widget.git"
  },
  "keywords": [
    "widget",
    "minimalistic",
    "azury",
    "easy-to-use",
    "browser"
  ],
  "author": "Azury <hello@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azurystudios/widget/issues"
  },
  "homepage": "https://github.com/azurystudios/widget#readme",
  "devDependencies": {
    "@azury/bundler": "^1.2.1",
    "typescript": "^4.5.2"
  },
  "type": "module"
}
